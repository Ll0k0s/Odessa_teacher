<?xml version="1.0" encoding="utf-8"?>
<!-- Layout для планшетов в ландшафтной ориентации с тёмной темой -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/settings_padding">

        <!-- Заголовок -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/card_margin">

            <View
                android:layout_width="4dp"
                android:layout_height="40dp"
                android:background="#00E676"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_title"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- Горизонтальный контейнер для двух колонок -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <!-- Левая колонка -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <!-- Карточка статуса подключения -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_margin"
                    app:cardBackgroundColor="#1E1E1E"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:contentPadding="@dimen/card_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="3dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:background="#00E676" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Статус подключения"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/section_title_text_size"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- TCP статус -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <ImageView
                                android:layout_width="@dimen/icon_size"
                                android:layout_height="@dimen/icon_size"
                                android:layout_marginEnd="16dp"
                                android:src="@android:drawable/ic_menu_share"
                                android:tint="#00E676" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TCP"
                                android:textColor="#E0E0E0"
                                android:textSize="@dimen/body_text_size" />

                            <ProgressBar
                                android:id="@+id/progressBarTCPIndicator"
                                style="?android:attr/progressBarStyle"
                                android:layout_width="@dimen/icon_size"
                                android:layout_height="@dimen/icon_size"
                                android:layout_marginEnd="12dp"
                                android:visibility="gone" />

                            <Switch
                                android:id="@+id/switch_TCP_indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:thumbTint="@color/switch_thumb" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Карточка настроек TCP -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_margin"
                    app:cardBackgroundColor="#1E1E1E"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:contentPadding="@dimen/card_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="3dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:background="#00E676" />

                            <TextView
                                android:id="@+id/title_tcp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Настройки TCP"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/section_title_text_size"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- IP адрес -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="IP Адрес"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxStrokeColor="#00E676"
                            app:hintTextColor="#00E676">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/value_addrTCP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:minHeight="@dimen/input_height"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:text="192.168.2.6"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/input_text_size" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Порт -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Порт"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxStrokeColor="#00E676"
                            app:hintTextColor="#00E676">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/value_portTCP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:imeOptions="actionDone"
                                android:minHeight="@dimen/input_height"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:text="9000"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/input_text_size" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Карточка выбора локомотива -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_margin"
                    app:cardBackgroundColor="#1E1E1E"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:contentPadding="@dimen/card_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="3dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:background="#00E676" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Локомотив"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/section_title_text_size"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <Spinner
                            android:id="@+id/spinner_num"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/input_height"
                            android:background="@drawable/spinner_background"
                            android:padding="12dp"
                            android:popupBackground="#2C2C2C"
                            android:spinnerMode="dropdown" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Карточка настроек Overlay окна -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#1E1E1E"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:contentPadding="@dimen/card_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="3dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:background="#00E676" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Всплывающее окно"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/section_title_text_size"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Координаты в одной строке -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:hint="X (px)"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="#00E676"
                                app:hintTextColor="#00E676">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/value_overlay_x"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberSigned"
                                    android:imeOptions="actionDone"
                                    android:minHeight="@dimen/input_height"
                                    android:paddingTop="16dp"
                                    android:paddingBottom="16dp"
                                    android:text="0"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/input_text_size" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:hint="Y (px)"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="#00E676"
                                app:hintTextColor="#00E676">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/value_overlay_y"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberSigned"
                                    android:imeOptions="actionDone"
                                    android:minHeight="@dimen/input_height"
                                    android:paddingTop="16dp"
                                    android:paddingBottom="16dp"
                                    android:text="160"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/input_text_size" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Масштаб overlay окна с ползунком -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingBottom="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Масштаб"
                                    android:textSize="@dimen/body_text_size"
                                    android:textColor="#00E676"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/text_scale_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1.00"
                                    android:textSize="@dimen/body_text_size"
                                    android:textColor="#FFFFFF"
                                    android:minWidth="60dp"
                                    android:gravity="end" />
                            </LinearLayout>

                            <SeekBar
                                android:id="@+id/seekbar_overlay_scale"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="98"
                                android:progress="18"
                                android:progressTint="#00E676"
                                android:thumbTint="#00E676" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="4dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="0.1"
                                    android:textSize="12sp"
                                    android:textColor="#757575" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="5.0"
                                    android:textSize="12sp"
                                    android:textColor="#757575"
                                    android:gravity="end" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Переключатель разрешения изменения окна -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <ImageView
                                android:layout_width="@dimen/icon_size"
                                android:layout_height="@dimen/icon_size"
                                android:src="@android:drawable/ic_menu_edit"
                                android:tint="#00E676"
                                android:layout_marginEnd="16dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Разрешить изменение окна"
                                android:textSize="@dimen/body_text_size"
                                android:textColor="#E0E0E0" />

                            <Switch
                                android:id="@+id/switch_allow_overlay_modification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:thumbTint="@color/switch_thumb" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Правая колонка - консоль -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <!-- Карточка консоли -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#1E1E1E"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:contentPadding="@dimen/card_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="3dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:background="#00E676" />

                            <TextView
                                android:id="@+id/console_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Консоль"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/section_title_text_size"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_console"
                            android:layout_width="match_parent"
                            android:layout_height="500dp"
                            android:background="@drawable/console_background"
                            android:fontFamily="monospace"
                            android:padding="16dp"
                            android:scrollbars="vertical"
                            android:text="..."
                            android:textColor="#00E676"
                            android:textSize="@dimen/console_text_size" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
